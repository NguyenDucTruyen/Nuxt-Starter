    "clsx": "^2.1.1",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.38.4",
    "lucide-vue-next": "^0.471.0",
    "nuxt": "^3.15.1",
    "nuxt-auth-utils": "0.5.7",
    "pinia": "^2.3.0",
    "postgres": "^3.4.5",
    "radix-vue": "^1.9.12",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "vee-validate": "^4.14.6",
    "vue": "latest",
    "vue-router": "latest",
    "vue-toastification": "2.0.0-rc.5",
    "zod": "^3.24.1"
