{
  "name": "nuxt-app",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint . --fix",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down",
    "db:seed": "jiti ./server/database/seeds/index.ts",
    "db:clear": "jiti ./server/database/seeds/delete.ts",
    "db:reset": "pnpm db:stop && pnpm db:start && pnpm db:generate && pnpm db:migrate && pnpm db:seed"
  },
  "dependencies": {
    "@nuxtjs/tailwindcss": "6.13.1",
