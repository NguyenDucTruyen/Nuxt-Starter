    "@types/bcrypt": "^5.0.2",
    "@vueuse/core": "^12.4.0",
    "@vueuse/nuxt": "^12.4.0",
    "drizzle-kit": "^0.30.2",
    "eslint": "^9.18.0",
    "jiti": "^2.4.2",
    "nodemailer": "^6.9.16",
    "nuxt-nodemailer": "^1.1.2",
    "shadcn-nuxt": "^0.11.3",
    "typescript": "^5.7.3"
  }
}
